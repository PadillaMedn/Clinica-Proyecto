@model proyectoFinal.Models.propietario_Mascota

@{
    ViewBag.Title = "Delete";
    String msj = ViewBag.errorMsj;
}
<div class="container">
    <div class="row letra">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-offset-1">
            <br />
            <br />
            <br />
            <br />
            <h3>¿Esta seguro de que desea eliminar este registro?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        <label>Nombre :</label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.nombre)
                    </dd>

                    <dt>
                        <label>Apellido :</label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.apellido)
                    </dd>

                    <dt>
                        <label>DUI :</label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.dui)
                    </dd>

                    <dt>
                        <label>Sexo :</label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.sexo)
                    </dd>

                    <dt>
                        <label>Telefono :</label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.telefono)
                    </dd>

                    <dt>
                        <label>Direccion :</label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.direccion)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                        @Html.ActionLink("Regresar a la lista", "Index", null, new { @class = "btn btn-primary" })
                    </div>
                    <h1 class="text-danger">@msj</h1>
                }
            </div>
        </div>
    </div>
</div>
    </div>
</div>
